#!/usr/bin/env ruby

require_relative '../lib/move.rb'

print "Welcome to Tic Tac Toe!"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

display_board(board)

print "Where would you like to go?"

user_input = gets.strip

input_to_index(user_input)

index = input_to_index

player = "X"

board[index] = player

move(board, index, player="X")

display_board(board)
